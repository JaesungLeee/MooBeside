<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gallery"
            type="com.jslee.presentation.feature.detail.model.GalleryUiModel" />

    </data>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_photo"
        android:layout_width="150dp"
        android:layout_height="215dp"
        android:scaleType="fitXY"
        posterImage="@{gallery.galleryImageUrl}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/MooBeside.Shape.Radius8"
        app:strokeColor="@color/Gray10"
        app:strokeWidth="1dp"
        tools:src="@drawable/img_sample" />
</layout>