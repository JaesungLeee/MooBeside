<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Bottom Navigation View -->
    <style name="MooBeside.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemBackground">@color/White</item>
        <item name="itemTextColor">@drawable/selector_bottom_bar</item>
        <item name="itemIconTint">@drawable/selector_bottom_bar</item>
        <item name="labelVisibilityMode">auto</item>
    </style>

    <!-- Toolbar -->
    <style name="MooBeside.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="titleTextAppearance">@style/MooBesideTextAppearance.Title1</item>
    </style>

    <style name="MooBeside.MaterialToolbar.Back" parent="MooBeside.MaterialToolbar">
        <item name="navigationIcon">@drawable/ic_back_24</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
</resources>