<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Bottom Navigation View -->
    <style name="MooBeside.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemBackground">@color/White</item>
        <item name="itemTextColor">@drawable/selector_bottom_bar</item>
        <item name="itemIconTint">@drawable/selector_bottom_bar</item>
        <item name="labelVisibilityMode">auto</item>
    </style>

    <!-- Toolbar -->
    <style name="MooBeside.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="titleTextAppearance">@style/MooBesideTextAppearance.Title1</item>
    </style>

    <style name="MooBeside.MaterialToolbar.Back" parent="MooBeside.MaterialToolbar">
        <item name="navigationIcon">@drawable/ic_back_24</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!-- TextInputField -->
    <style name="MooBeside.SearchOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">영화제목을 입력하세요</item>
        <item name="hintTextColor">@color/Blurple</item>
        <item name="boxStrokeColor">@drawable/selector_text_input_layer_indicator</item>
        <item name="boxStrokeErrorColor">@color/Red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/Gray02</item>
    </style>

    <style name="MooBeside.SearchTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Radius -->
    <style name="MooBeside.Radius8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>